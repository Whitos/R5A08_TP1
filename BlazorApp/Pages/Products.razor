@page "/products"
@inject IProductService productService
@inject IJSRuntime JSRuntime
 
<PageTitle>Produits</PageTitle>

<h1>Liste des produits</h1>

@if (products == null)
{
    <p><em>Chargement...</em></p>
}
else if (!products.Any())
{
    <p><em>Aucun produit trouvé.</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Marque</th>
                <th>Type de Produit</th>
@*                 <th>Photo</th> *@
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.NameProduct</td>
                    <td>@product.Description</td>
                    <td>@product.NameBrand</td>
                    <td>@product.NameTypeProduct</td>
                   @*  <td>
                        <img src="@produit.UriPhoto" alt="@produit.NomProduit" width="100" />
                    </td> *@
                    <td>
                        <a class="btn btn-sm btn-warning" href="/edit-product/@product.IdProduct">Modifier</a>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteProduct(product.IdProduct)">Supprimer</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ProductDto>? products;

    protected override async Task OnInitializedAsync()
    {
        products = await productService.GetAllAsync();
    }

    private async Task DeleteProduct(int id)
    {
        var confirm = await JSRuntime.InvokeAsync<bool>("confirm", $"Êtes-vous sûr de vouloir supprimer le produit avec l'ID {id} ?");
        if (confirm)
        {
            await productService.DeleteAsync(id);
            products = await productService.GetAllAsync();
            StateHasChanged();
        }
    }
}
